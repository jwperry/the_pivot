<div class="row">
  <div class="col m6 s12">
    <% if @item.file_upload_file_name.nil? %>
      <%= image_tag @item.image_path %>
    <% elsif @item.file_upload_file_name %>
      <%= image_tag @item.file_upload.url(:large) %>
    <% end %>
  </div>
  <div class="col m6 s12">
    <h4><%= @item.title %></h4> by <br>
    <h5><%= @item.user.full_name %></h5>
    <p class="larger-text">$<%= @item.price %></p>
    <p class="larger-text"><%= @item.description %></p>

    <% if current_admin? %>
      <% if @item.active? %>
        <p class="active-status-text text-accent-4 larger-text">Status: <%= @item.status %></p>
      <% else %>
        <p class="inactive-status-text larger-text">Status: <%= @item.status %></p>
      <% end %>

      <br>
      <%= link_to "Edit", edit_admin_item_path(@item), class: "btn waves-effect waves-light btn-edit"%>
      <%= link_to "Delete", admin_item_path(@item), method: :delete,  class: "btn waves-effect waves-light btn-delete"%>

    <% elsif current_artist? && artist_owns_item?(@item) %>
      <% if @item.active? %>
        <p class="active-status-text active-status-text larger-text">Status: <%= @item.status %></p>
      <% else %>
        <p class="inactive-status-text larger-text">Status: <%= @item.status %></p>
      <% end %>

      <br>
      <%= link_to "Edit", edit_user_item_path(current_user, @item), class: "btn waves-effect waves-light btn-edit"%>
      <br>
      <%= link_to "Delete", item_path(@item), method: :delete,  class: "btn waves-effect waves-light btn-delete"%>
    <% end %>

    <% if @item.active? %>
      <%= button_to "Add to Cart", cart_items_path(item_id: @item.id), class: "btn waves-effect waves-light" %>
    <% elsif @item.default_image? %>
      <p class="red-text">This item is inactive. <br> Please upload an image to change status.</p>
    <% else %>
      <p class="pink-error-text">This item is inactive.</p>
    <% end %>
  </div>
</div>
