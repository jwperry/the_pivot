<%= form_for @job, :html => {class: "job-form"}, :url => user_jobs_path(current_user, @job) do |f| %>
  <%= render partial: 'shared/errors', locals: {target: @job} %>

  <%= f.label :title %>
  <%= f.text_field :title, required: true %>
  <br>

  <%= f.label :category_id %>
  <%= f.select :category_id, options_from_collection_for_select(all_categories, :id, :name),
                             required: true %>
    <br>

  <%= f.label :description %>
  <%= f.text_area :description, required: true,
                  maxlength: 600, minlength: 50 %>
  <br>

  <%= f.label :city %>
  <%= f.text_field :city, required: true %>
  <br>

  <%= f.label :state %>
  <%= f.select :state, options_for_select(us_states, "MN"),
               required: true %>
  <br>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode, required: true %>
  <br>

  <%= label_tag "Bidding Close Date" %>
  <input type="date" name="job[bidding_close_date]">
  <br>

  <%= label_tag "Must Complete By Date" %>
  <input type="date" name="job[must_complete_by_date]">
  <br>

  <%= label_tag :bid_close_time %>
  <%= time_select "bid_close", "time",
                  ampm: true,
                  required: true,
                  minute_step: 15 %>
  <br>

  <%= label_tag "Duration Estimate" %>
  <select name="job[duration_estimate]">
    <option value="0">Short</option>
    <option value="1">Medium</option>
    <option value="2">Long</option>
    <option value="3">Event</option>
  </select>
  <br>

  <%= f.submit class: "wave-effect waves-light btn" %>
<% end  %>
