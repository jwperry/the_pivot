<%= form_for @job, :html => {class: "job-form"}, :url => user_jobs_path(current_user, @job) do |f| %>
  <%= render partial: 'shared/errors', locals: {target: @job} %>

  <%= f.label :title %>
  <%= f.text_field :title, required: true %>
  <br>

  <%= f.label :category_id %>
  <%= f.select :category_id, options_from_collection_for_select(all_categories, :id, :name),
                 required: true %>
    <br>

  <%= f.label :description %>
  <%= f.text_area :description, required: true,
                  maxlength: 500, minlength: 10 %>
  <br>

  <%= f.label :city %>
  <%= f.text_field :city, required: true %>
  <br>

  <%= f.label :state %>
  <%= f.select :state, options_for_select(us_states, "MN"),
               required: true %>
  <br>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode, required: true %>
  <br>

  <span>Bidding Close Date: <input type="date" name="job[bidding_close_date]"></span>
  <br>

  <span>Job Complete By Date: <input type="date" name="job[must_complete_by_date]"></span>
  <br>

  <%= f.label :duration_estimate %>
  <%= f.number_field :duration_estimate, required: true %>
  <br>

  <%= f.submit class: "wave-effect waves-light btn" %>
<% end  %>
