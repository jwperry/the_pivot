<div class="row">
  <div class="col s12 m12 l12">
    <div class="card">
      <div class="card-content">
        <div class="row valign-wrapper">
          <h5 class="col s12 m8 l10 left-align job-title comment-job-title">
            <%= link_to comment.associated_job_title, user_job_path(comment.job.lister, comment.job) %>
          </h5>
          <div class="col s12 m4 l2 center-align valign duration-block">
            <div class="duration-tag duration-estimate-<%= comment.associated_job_duration %>"><%= comment.associated_job_duration %></div>
          </div>
        </div>
        <p class="comment-text"><%= comment.text %></p>
      </div>
      <div class="card-action comment-card">
        <div class="row">
          <div class="col s12 m3 l3">
            <p>$<%= comment.accepted_bid_price %></p>
          </div>
          <div class="col s12 m3 l3">
            <p><%= comment.posted_at %></p>
          </div>
          <div class="col s12 m3 l3">
            <p><%= comment.rating %> / 5</p>
          </div>
          <div class="col s12 m3 l3">
            <p><%= link_to comment.user.full_name, user_path(comment.user), class: "commenter-link" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
