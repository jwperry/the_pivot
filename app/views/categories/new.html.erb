<div class="container">
  <div class="row">
    <div class="col s12">
      <h2>Create a New Category</h2>
    </div>
  </div>

  <div class="row">
    <%= form_for @category do |f| %>
      <%= render partial: 'shared/errors', locals: {target: @category } %>

      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
      <br>

      <%= f.label :description %>
      <%= f.text_area :description %>
      <br>

      <%= f.submit class: "wave-effect waves-light btn" %>
    <% end %>
  </div>
</div>
